<!DOCTYPE html>
<html>
  <body>
    <pre id="message">Loading...</pre>
    {% if inline %}
    <pre id="plaintext"></pre>
    {% else %}
    <a id="download"></a>
    {% endif %}
    {% if hosted %}
    <script type="text/javascript" src="{{ hosted_decrypt }}"
            integrity="{{ hosted_decrypt_integrity }}"
            crossorigin="anonymous"></script>
    {% else %}
    <script type="text/javascript">{{ unhosted_decrypt }}</script>
    {% endif %}
    <script type="text/javascript">
      main({
        inline: {{ inline }},
        ciphertext: "{{ ciphertext }}",
        key: {{ key }},
        nonce: {{ nonce }},
        mimetype: "{{ mimetype }}",
        filename: "{{ filename }}"
      });
    </script>
  </body>
</html>
